{
    "openapi": "3.0.0",
    "info": {
        "title": "API to manage cars",
        "version": "1.0"
    },
    "paths": {
        "/api/cars": {
            "get": {
                "tags": [
                    "Cars"
                ],
                "summary": "Display all cars",
                "description": "Display all cars",
                "operationId": "958a1772eedd09dfa95ebe212f7327cf",
                "responses": {
                    "200": {
                        "description": "Cars list"
                    }
                }
            },
            "post": {
                "tags": [
                    "Cars"
                ],
                "summary": "Store new car",
                "description": "Store a newly created car in storage",
                "operationId": "580bcaf2ac52348953fff9edff427207",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "brand",
                                    "model",
                                    "year",
                                    "color",
                                    "price"
                                ],
                                "properties": {
                                    "brand": {
                                        "type": "string",
                                        "example": "Toyota"
                                    },
                                    "model": {
                                        "type": "string",
                                        "example": "Corolla"
                                    },
                                    "year": {
                                        "type": "integer",
                                        "example": 2022
                                    },
                                    "color": {
                                        "type": "string",
                                        "example": "Black"
                                    },
                                    "price": {
                                        "type": "number",
                                        "example": 15000
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Car created successfully"
                    },
                    "400": {
                        "description": "No valid data"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Cars",
            "description": "Cars"
        }
    ]
}